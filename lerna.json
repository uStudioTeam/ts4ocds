{
  "version": "1.1.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "packages/docs"
  ],
  "command": {
    "version": {
      "message": "chore(release): %s",
      "allowBranch": [
        "hotfix-*",
        "release-*"
      ],
      "conventionalCommits": true
    }
  }
}
